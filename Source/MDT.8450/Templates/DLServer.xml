        <condition>
          <expression type="SMS_TaskSequence_VariableConditionExpression">
            <variable name="Variable">PrepareForVDI</variable>
            <variable name="Operator">equals</variable>
            <variable name="Value">Yes</variable>
          </expression>
        </condition>
      </step>
      <step type="SMS_TaskSequence_RunCommandLineAction" name="CONFIG - Suspend Task Sequence" description="Pauses the task sequence so that manual updates can be made to the Windows 8 Start Screen" disable="false" continueOnError="false" startIn="" successCodeList="0 3010" runIn="WinPEandFullOS">
        <defaultVarList>
          <variable name="PackageID" property="PackageID"></variable>
          <variable name="RunAsUser" property="RunAsUser">false</variable>
          <variable name="SMSTSRunCommandLineUserName" property="SMSTSRunCommandLineUserName"></variable>
          <variable name="SMSTSRunCommandLineUserPassword" property="SMSTSRunCommandLineUserPassword"></variable>
          <variable name="LoadProfile" property="LoadProfile">false</variable>
        </defaultVarList>
        <action>cscript.exe "%SCRIPTROOT%\LTISuspend.wsf"</action>
        <condition>
          <expression type="SMS_TaskSequence_VariableConditionExpression">
            <variable name="Variable">CustomizeStartScreen</variable>
            <variable name="Operator">equals</variable>
            <variable name="Value">YES</variable>
          </expression>
        </condition>
      </step>
      <step name="Windows Update (Post-Application Installation)" disable="false" continueOnError="true" successCodeList="0 3010" description="" startIn="">
        <action>cscript.exe "%SCRIPTROOT%\ZTIWindowsUpdate.wsf"</action>
        <condition>
          <expression type="SMS_TaskSequence_VariableConditionExpression">
            <variable name="Variable">UseWindowsUpdate</variable>
            <variable name="Operator">equals</variable>
            <variable name="Value">Yes</variable>
          </expression>
        </condition>
      </step>
      <step name="Verify Applications" disable="false" continueOnError="true" successCodeList="0 3010">
        <action>cscript.exe "%SCRIPTROOT%\Extras\ZTIAppVerify.wsf"</action>
      </step>
      <step name="Check for Drivers" disable="false" continueOnError="true" successCodeList="0 3010">
        <action>cscript.exe "%SCRIPTROOT%\Extras\ZTIYellowBang.wsf"</action>
      </step>
    </group>
    <step type="SMS_TaskSequence_EnableBitLockerAction" name="Enable BitLocker" continueOnError="true" successCodeList="0 3010" description="" startIn="">
      <action>cscript.exe "%SCRIPTROOT%\ZTIBde.wsf"</action>
      <condition>
        <expression type="SMS_TaskSequence_VariableConditionExpression">
          <variable name="Variable">BdeInstallSuppress</variable>
          <variable name="Operator">notEquals</variable>
          <variable name="Value">YES</variable>
        </expression>
      </condition>
      <defaultVarList>
        <variable name="OSDBitLockerTargetDrive" property="BdeTargetDriveLetter"></variable>
        <variable name="OSDBitLockerMode" property="BdeInstall">TPM</variable>
        <variable name="OSDBitLockerStartupKeyDrive" property="BdeKeyLocation"></variable>
        <variable name="OSDBitLockerCreateRecoveryPassword" property="BdeRecoveryPassword">AD</variable>
